<%total_price = 0 %>
<p id="notice"><%= notice %></p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>Password:</strong>
  <%= @user.password %>
</p>

<h2>Заказ:</h2>
<table>
  <th>Название продукта</th>
  <th>Стоимость</th>
  <% @user.order.line_items.each do |item| %>
  <tr>
    <td><%= item.product.title %></td>
    <td><%= item.product.price %></td>
    <% total_price += item.product.price %>
    <td><%= link_to "Удалить", item, method: :delete , data: { confirm: 'Are you sure?' }%></td>
  </tr>
  <% end %>
</table>
<strong>Стоимость всего заказа: <%= total_price %></strong><br>
<%= @user.order.status %>
<%if @user.order.status == "Не подтвержден" %>
    <%= link_to "Подтвердить", order_path(:order => {status: "Подтвержденн"}), method: :put %>
<%end  %>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
