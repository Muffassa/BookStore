<div class="top-bar">
  <div class="top-bar-left">
    <ul class="menu">
      <li class="menu-text"><%=link_to "Book store", root_path %></li>
    </ul>
  </div>
  <div class="top-bar-right">
    <ul class="menu">
      <li>
        <%= link_to (image_tag "circle.svg"), new_product_path %>
      </li>
      <% if @current_user == nil %>
        <li>
          <%= link_to "Регистрация", signup_path %>
        </li>
        <li>
          <a href="login">Вход</a>
        </li>
      <% else %>
        <li>
          <%= link_to "Личный кабинет", @current_user %>
        </li>
        <li>
          <%= link_to "Выход", session_path(session[:user_id]), method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
