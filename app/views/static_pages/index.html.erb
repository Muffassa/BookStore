<div class="block_title">
  <h2>Наши книги</h2>
</div>
<div class="products">
  <% for product in @products %>
  <div class="product">
    <%=image_tag product.img_url %>
    <div class="product_title">
      <h4>
        <%= product.title %>
      </h4>
    </div>
    <div class="product_description">
      <%= product.description %>
    </div>
    <div class="product_price">
      <%= product.price %>
    </div>
  </div>
  <% end %>
</div>
